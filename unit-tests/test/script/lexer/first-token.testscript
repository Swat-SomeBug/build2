# Note: this mode auto-expires after each token.
#
test.arguments = first-token

: dot
:
$* <"." >>EOO
.
<newline>
EOO

: semi
:
$* <";" >>EOO
;
<newline>
EOO

: colon
:
$* <":" >>EOO
:
<newline>
EOO

: lcbrace
:
$* <"{" >>EOO
{
<newline>
EOO

: rcbrace
:
$* <"}" >>EOO
}
<newline>
EOO

: setup
:
$* <"+foo" >>EOO
+
'foo'
<newline>
EOO

: tdown
:
$* <"- foo" >>EOO
-
'foo'
<newline>
EOO

: plus-leading
:
$* <"foo+bar" >>EOO
'foo+bar'
<newline>
EOO

: minus-leading
:
$* <"foo- x" >>EOO
'foo-'
'x'
<newline>
EOO

: assign
:
$* <"foo=" >>EOO
'foo'
'='
<newline>
EOO

: append
:
$* <"foo+=" >>EOO
'foo'
'+='
<newline>
EOO

: prepend
:
$* <"foo=+" >>EOO
'foo'
'=+'
<newline>
EOO
