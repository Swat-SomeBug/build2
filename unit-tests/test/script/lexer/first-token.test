# Note: this mode auto-expires after each token.
#
test.arguments = first-token

$* <";" >>EOO # semi
;
<newline>
EOO

$* <":" >>EOO # colon
:
<newline>
EOO

$* <"{" >>EOO # lcbrace
{
<newline>
EOO

$* <"}" >>EOO # rcbrace
}
<newline>
EOO

$* <"+foo" >>EOO # setup
+
'foo'
<newline>
EOO

$* <"- foo" >>EOO # tdown
-
'foo'
<newline>
EOO

$* <"foo+bar" >>EOO # plus-leading
'foo+bar'
<newline>
EOO

$* <"foo- x" >>EOO # minus-leading
'foo-'
'x'
<newline>
EOO

$* <"foo=" >>EOO # assign
'foo'
'='
<newline>
EOO

$* <"foo+=" >>EOO # append
'foo'
'+='
<newline>
EOO

$* <"foo=+" >>EOO # prepend
'foo'
'=+'
<newline>
EOO
