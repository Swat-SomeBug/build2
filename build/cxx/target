      virtual const target_type& type () const {return static_type;}
      static const target_type static_type;
    };

    class txx: public file
    {
    public:
      using file::file;

    public:
      virtual const target_type& type () const {return static_type;}
      static const target_type static_type;
    };

    class cxx: public file
    {
    public:
      using file::file;

    public:
      virtual const target_type& type () const {return static_type;}
      static const target_type static_type;
    };

    //@@ TMP
