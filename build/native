#ifndef BUILD_NATIVE
#define BUILD_NATIVE

#include <build/target>

namespace build
{
  class obj: public file
  {
  public:
    using file::file;

  public:
    virtual const target_type& type () const {return static_type;}
    static const target_type static_type;
  };

  class exe: public file
  {
  public:
    using file::file;

  public:
    virtual const target_type& type () const {return static_type;}
    static const target_type static_type;
  };

  class lib: public file
  {
  public:
    using file::file;

  public:
    virtual const target_type& type () const {return static_type;}
    static const target_type static_type;
  };
}

#endif // BUILD_NATIVE
