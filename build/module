#ifndef BUILD_MODULE
#define BUILD_MODULE

#include <string>
#include <unordered_map>

namespace build
{
  class scope;
  class location;

  using module_init_function = void (scope& root, scope& base, const location&);
  using module_map = std::unordered_map<std::string, module_init_function*>;

  extern module_map modules;
}

#endif // BUILD_MODULE
