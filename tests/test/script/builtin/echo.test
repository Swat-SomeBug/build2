.include ../common.test

: string
:
$c <'echo foo >foo' && $b

: strings
:
$c <'echo foo bar >"foo bar"' && $b

: big
:
: Echo a big string (about 100K) to test that the builtin is asynchronous.
:
{
  $c <<EOI && $b
  s="--------------------------------"
  s="$s$s$s$s$s$s$s$s$s$s$s$s$s$s$s$s"
  s="$s$s$s$s$s$s$s$s$s$s$s$s$s$s$s$s"
  s="$s$s$s$s$s$s$s$s$s$s$s$s$s$s$s$s"
  echo "$s" | cat >"$s"
  EOI
}
