cxx.std = latest

using cxx

hxx{*}: extension = hxx
cxx{*}: extension = cxx

# Setup the build system driver that we are testing (which may not be the same
# as our $build.path).
#
import b = build2%exe{b}
test{*}: test = $b

# Specify the test target for cross-testing.
#
test.target = $cxx.target
