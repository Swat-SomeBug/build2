.include ../common.test

: dir_path
:
{
  : name
  :
  $* <<EOI >>/EOO
  d = [dir_path] foo
  f = bar
  print $d/$f
  EOI
  foo/bar
  EOO

  : string
  :
  $* <<EOI >>/EOO
  d = [dir_path] foo
  f = [string] bar
  print $d/$f
  EOI
  foo/bar
  EOO

  : leading-separator
  :
  $* <<EOI >>/EOO
  d = [dir_path] foo
  f = /bar
  print $d/$f
  EOI
  foo/bar
  EOO

  : not-separated
  :
  $* <<EOI >>/EOO
  d = [dir_path] foo
  f = bar
  print $d$f
  EOI
  foo/bar
  EOO
}

: path
:
{
  : separated
  :
  $* <<EOI >>/EOO
  d = [path] foo
  f = bar
  print $d/$f
  EOI
  foo/bar
  EOO

  : not-separated
  :
  $* <<EOI >>/EOO
  d = [path] foo
  f = bar
  print $d$f
  EOI
  foobar
  EOO
}
